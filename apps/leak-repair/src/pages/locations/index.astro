---
/**
 * Locations Hub Index - Lists all service locations
 * URL: /locations
 */
import BaseLayout from '@sfw/ui';
import { HeroSection, CTASection } from '@sfw/ui';
import { serviceConfigs, getAllLocations } from '@sfw/content';

const config = serviceConfigs['leak-repair'];
const locations = getAllLocations();
---

<BaseLayout
  title="Service Locations | Window Leak Repair Services"
  description="Professional window leak detection and repair services across the Pacific Northwest. Serving Seattle, Portland, and surrounding areas."
  config={config}
  navigation={[
    { label: 'Home', url: '/' },
    { label: 'Services', url: '/services' },
    { label: 'Locations', url: '/locations' },
  ]}
>
  <!-- Hero Section -->
  <HeroSection
    headline="Professional Window Leak Services Across the Pacific Northwest"
    subheadline="Expert window leak detection, repair, and waterproofing in your area"
    primaryCTA={{ text: 'View Locations', href: '#locations' }}
    height="md"
  />

  <!-- Locations Grid -->
  <section id="locations" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-heading font-bold text-center mb-12">
        Where We Serve
      </h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {locations.map((location) => (
          <a
            href={`/locations/${location.slug}`}
            class="group bg-gray-light p-8 rounded-lg hover:shadow-xl transition-all duration-200 border-2 border-transparent hover:border-primary"
          >
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="text-3xl font-heading font-bold text-dark group-hover:text-primary transition-colors mb-2">
                  {location.name}, {location.state}
                </h3>
                <p class="text-gray-600">
                  {location.stats?.projectsCompleted || '1000+'} projects completed
                </p>
              </div>
              <svg
                class="w-8 h-8 text-primary group-hover:translate-x-2 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>

            <p class="text-gray-700 mb-6">
              {location.heroSubheadline}
            </p>

            <div class="space-y-3">
              <!-- Phone -->
              <div class="flex items-center text-gray-700">
                <svg class="w-5 h-5 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {location.phone}
              </div>

              <!-- Neighborhoods -->
              <div class="flex items-start text-gray-700">
                <svg class="w-5 h-5 text-primary mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>
                  Serving {location.neighborhoods.slice(0, 3).map(n => n.name).join(', ')}, and more
                </span>
              </div>
            </div>

            <div class="mt-6 text-primary font-semibold group-hover:underline">
              View {location.name} Services â†’
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-gray-light">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-heading font-bold text-center mb-12">
        Why Choose Us
      </h2>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="bg-primary text-white w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold mb-4 mx-auto">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold mb-3">Licensed & Insured</h3>
          <p class="text-gray-600">
            Fully licensed, bonded, and insured for your protection and peace of mind.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-primary text-white w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold mb-4 mx-auto">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold mb-3">Fast Response</h3>
          <p class="text-gray-600">
            Quick quotes and efficient project timelines. We respect your time and schedule.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-primary text-white w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold mb-4 mx-auto">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold mb-3">Quality Guarantee</h3>
          <p class="text-gray-600">
            5-year workmanship warranty and premium materials for lasting beauty.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    headline="Find Window Leak Experts in Your Area"
    description="Select your location to see our services, get a free quote, and connect with local window leak professionals."
    primaryCTA={{ text: 'View Locations', href: '#locations' }}
    secondaryCTA={{ text: 'Call Now', href: `tel:${config.phone}` }}
    variant="dark"
  />
</BaseLayout>
