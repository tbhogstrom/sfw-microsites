---
/**
 * Services Index Page
 * Lists all available services by location
 */
import BaseLayout from '@sfw/ui';
import { HeroSection, CTASection } from '@sfw/ui';
import { serviceConfigs } from '@sfw/content';
import { servicesByLocation } from '../../data/services';

const config = serviceConfigs['beam-repair'];
---

<BaseLayout
  title="Our Beam Repair Services | Portland"
  description="Professional beam repair, replacement, and reinforcement services in Portland, Oregon. Expert structural solutions and quality craftsmanship."
  config={config}
  navigation={[
    { label: 'Home', url: '/' },
    { label: 'Services', url: '/services' },
    { label: 'Blog', url: '/blog' },
    { label: 'Locations', url: '/locations' },
  ]}
>
  <!-- Hero Section -->
  <HeroSection
    headline="Professional Beam Repair Services"
    subheadline="Expert beam repair, replacement, and structural reinforcement in Portland"
    primaryCTA={{ text: 'Get Free Quote', href: `tel:${config.phone}` }}
    secondaryCTA={{ text: 'View Locations', href: '/locations' }}
    height="md"
  />

  <!-- Portland Services -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-heading font-bold mb-4">
            Portland, Oregon Services
          </h2>
          <p class="text-xl text-gray-600">
            Comprehensive beam repair and structural services for homeowners in the Portland metro area
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {servicesByLocation.portland.map((service) => (
            <a
              href={`/services/${service.location}/${service.slug}`}
              class="group bg-gray-light p-6 rounded-lg hover:shadow-lg transition-all duration-300 border-2 border-transparent hover:border-primary"
            >
              <h3 class="text-xl font-heading font-bold mb-3 text-dark group-hover:text-primary transition-colors">
                {service.name}
              </h3>
              <p class="text-gray-600 mb-4 line-clamp-3">
                {service.heroSubheadline}
              </p>
              <div class="flex items-center text-primary font-semibold">
                Learn More
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          ))}
        </div>

        <div class="text-center mt-12">
          <a
            href="/locations/portland"
            class="inline-flex items-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-colors"
          >
            View Portland Location
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 bg-gray-light">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-heading font-bold mb-8">
          Why Choose Our Services?
        </h2>

        <div class="grid md:grid-cols-3 gap-8 mt-12">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold mb-2">Expert Craftsmanship</h3>
            <p class="text-gray-600">
              Licensed professionals with years of experience in structural repairs
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold mb-2">Transparent Pricing</h3>
            <p class="text-gray-600">
              Free estimates with no hidden fees or surprise charges
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold mb-2">Quality Guarantee</h3>
            <p class="text-gray-600">
              5-year warranty on workmanship and premium materials
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    headline="Ready to Get Started?"
    description="Contact us today for a free consultation and quote. We're here to help with all your structural needs."
    primaryCTA={{ text: 'Get Free Quote', href: `tel:${config.phone}` }}
    secondaryCTA={{ text: 'View Locations', href: '/locations' }}
    variant="dark"
  />
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
