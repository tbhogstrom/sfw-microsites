---
interface Props {
  folder?: string;
  maxSizeMB?: number;
  onUploadComplete?: string; // Callback function name
}

const {
  folder = 'images',
  maxSizeMB = 10,
  onUploadComplete
} = Astro.props;
---

<div class="image-upload-container">
  <div class="upload-area" id="uploadArea">
    <input
      type="file"
      id="imageInput"
      accept="image/jpeg,image/png,image/heic,image/heif"
      class="hidden"
    />
    <div class="upload-prompt">
      <svg class="upload-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
      </svg>
      <p class="upload-text">Click to upload or drag and drop</p>
      <p class="upload-hint">JPEG, PNG, or HEIC (max {maxSizeMB}MB)</p>
    </div>
    <div class="upload-loading hidden">
      <div class="spinner"></div>
      <p>Uploading...</p>
    </div>
    <div class="upload-preview hidden">
      <img id="previewImage" alt="Preview" />
      <button type="button" class="remove-btn" id="removeBtn">Remove</button>
    </div>
  </div>
  <div class="upload-error hidden" id="uploadError"></div>
  <input type="hidden" id="imageUrl" name="imageUrl" />
</div>

<style>
  .image-upload-container {
    width: 100%;
    max-width: 500px;
  }

  .upload-area {
    border: 2px dashed #cbd5e0;
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s;
    background: #f7fafc;
  }

  .upload-area:hover {
    border-color: #4299e1;
    background: #ebf8ff;
  }

  .upload-area.drag-over {
    border-color: #4299e1;
    background: #ebf8ff;
  }

  .hidden {
    display: none !important;
  }

  .upload-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1rem;
    color: #4a5568;
  }

  .upload-text {
    font-size: 1rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
  }

  .upload-hint {
    font-size: 0.875rem;
    color: #718096;
  }

  .upload-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #e2e8f0;
    border-top-color: #4299e1;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .upload-preview {
    position: relative;
  }

  .upload-preview img {
    max-width: 100%;
    max-height: 400px;
    border-radius: 8px;
    object-fit: contain;
  }

  .remove-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(239, 68, 68, 0.9);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 0.5rem 1rem;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s;
  }

  .remove-btn:hover {
    background: rgba(220, 38, 38, 1);
  }

  .upload-error {
    margin-top: 0.5rem;
    padding: 0.75rem;
    background: #fed7d7;
    color: #c53030;
    border-radius: 6px;
    font-size: 0.875rem;
  }
</style>

<script define:vars={{ folder, onUploadComplete }}>
  const uploadArea = document.getElementById('uploadArea');
  const imageInput = document.getElementById('imageInput');
  const uploadPrompt = uploadArea.querySelector('.upload-prompt');
  const uploadLoading = uploadArea.querySelector('.upload-loading');
  const uploadPreview = uploadArea.querySelector('.upload-preview');
  const previewImage = document.getElementById('previewImage');
  const removeBtn = document.getElementById('removeBtn');
  const uploadError = document.getElementById('uploadError');
  const imageUrlInput = document.getElementById('imageUrl');

  let currentImageUrl = null;

  // Click to upload
  uploadArea.addEventListener('click', (e) => {
    if (e.target === removeBtn || removeBtn.contains(e.target)) return;
    imageInput.click();
  });

  // File selection
  imageInput.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (file) {
      uploadImage(file);
    }
  });

  // Drag and drop
  uploadArea.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.classList.add('drag-over');
  });

  uploadArea.addEventListener('dragleave', () => {
    uploadArea.classList.remove('drag-over');
  });

  uploadArea.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.classList.remove('drag-over');

    const file = e.dataTransfer.files[0];
    if (file && file.type.startsWith('image/')) {
      uploadImage(file);
    }
  });

  // Remove image
  removeBtn.addEventListener('click', (e) => {
    e.stopPropagation();
    resetUpload();
  });

  async function uploadImage(file) {
    try {
      // Hide error
      uploadError.classList.add('hidden');

      // Show loading
      uploadPrompt.classList.add('hidden');
      uploadPreview.classList.add('hidden');
      uploadLoading.classList.remove('hidden');

      // Create form data
      const formData = new FormData();
      formData.append('image', file);
      formData.append('folder', folder);

      // Upload
      const response = await fetch('/api/upload', {
        method: 'POST',
        body: formData,
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Upload failed');
      }

      const result = await response.json();
      currentImageUrl = result.url;

      // Update hidden input
      imageUrlInput.value = result.url;

      // Show preview
      previewImage.src = result.url;
      uploadLoading.classList.add('hidden');
      uploadPreview.classList.remove('hidden');

      // Call callback if provided
      if (onUploadComplete && typeof window[onUploadComplete] === 'function') {
        window[onUploadComplete](result);
      }

      // Dispatch custom event
      const event = new CustomEvent('imageUploaded', {
        detail: result
      });
      uploadArea.dispatchEvent(event);

    } catch (error) {
      console.error('Upload error:', error);
      uploadError.textContent = error.message;
      uploadError.classList.remove('hidden');
      uploadLoading.classList.add('hidden');
      uploadPrompt.classList.remove('hidden');
    }
  }

  function resetUpload() {
    currentImageUrl = null;
    imageUrlInput.value = '';
    imageInput.value = '';
    uploadPreview.classList.add('hidden');
    uploadPrompt.classList.remove('hidden');

    // Dispatch custom event
    const event = new CustomEvent('imageRemoved');
    uploadArea.dispatchEvent(event);
  }
</script>
