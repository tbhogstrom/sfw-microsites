---
/**
 * Location Hub Page - Dynamic route for city-specific pages
 * URL: /locations/seattle, /locations/portland, etc.
 */
import BaseLayout from '@sfw/ui';
import {
  HeroSection,
  StatsBar,
  ProcessSteps,
  TestimonialSlider,
  FAQAccordion,
  ContactForm,
  CTASection,
} from '@sfw/ui';
import { serviceConfigs, getLocationPaths, getLocation } from '@sfw/content';
import type { Location } from '@sfw/content';

// Generate static paths for all locations
export async function getStaticPaths() {
  return getLocationPaths();
}

const { slug } = Astro.params;
const location = getLocation(slug as string);

if (!location) {
  return Astro.redirect('/404');
}

const config = serviceConfigs['dry-rot'];

// Create location-specific stats
const stats = [
  { value: location.stats?.yearsInArea || '20', suffix: '+', label: 'Years in Area' },
  { value: location.stats?.projectsCompleted || '1000', suffix: '+', label: 'Local Projects' },
  { value: location.stats?.satisfactionRate || '99', suffix: '%', label: 'Satisfaction Rate' },
  { value: '24', suffix: '/7', label: 'Emergency Service' },
];

// Process steps for projects
const steps = [
  {
    title: 'Free Consultation',
    description: `Call us at ${location.phone} or fill out our form for a free, no-obligation consultation.`,
    icon: 'phone' as const,
  },
  {
    title: 'Custom Design',
    description: `Our ${location.name} team creates a custom deck plan tailored to your home and budget.`,
    icon: 'check' as const,
  },
  {
    title: 'Professional Installation',
    description: 'Licensed and insured craftsmen build your deck to perfection.',
    icon: 'check' as const,
  },
];

// Common FAQs for location pages
const faqs = [
  {
    question: `Do you service all of ${location.name}?`,
    answer: `Yes! We serve all neighborhoods in ${location.fullName} and surrounding areas. Our service area includes ${location.neighborhoods.slice(0, 5).map(n => n.name).join(', ')}, and more.`,
  },
  {
    question: 'How long does a project take?',
    answer: 'Most installations take 1-2 weeks depending on size and complexity. Repairs can often be completed in just a few days.',
  },
  {
    question: 'Do you offer warranties?',
    answer: 'Yes, we offer a 5-year warranty on all workmanship and our materials come with manufacturer warranties.',
  },
  {
    question: `What service options work best in ${location.name}?`,
    answer: `In ${location.fullName}, we recommend the best materials for your needs. We'll help you choose the best material for your climate and budget.`,
  },
  {
    question: 'Can you help with permits?',
    answer: `Absolutely! We handle all permit applications and inspections required in ${location.name}.`,
  },
];
---

<BaseLayout
  title={location.metaTitle}
  description={location.metaDescription}
  config={config}
  navigation={[
    { label: 'Home', url: '/' },
    { label: 'Services', url: '/services' },
    { label: 'Locations', url: '/locations' },
    { label: location.name, url: `/locations/${location.slug}` },
  ]}
>
  <!-- Hero Section -->
  <HeroSection
    headline={location.heroHeadline}
    subheadline={location.heroSubheadline}
    primaryCTA={{ text: 'Get Free Quote', href: '#contact' }}
    secondaryCTA={{ text: `Call ${location.phone}`, href: `tel:${location.phone}` }}
    height="lg"
  />

  <!-- Stats Bar -->
  <StatsBar stats={stats} variant="primary" />

  <!-- Services Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-heading font-bold text-center mb-4">
        Our Services in {location.name}
      </h2>
      <p class="text-xl text-center text-gray-600 mb-12 max-w-3xl mx-auto">
        Professional services throughout {location.fullName}
      </p>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {location.services.map((service) => (
          <div class="bg-gray-light p-8 rounded-lg">
            <h3 class="text-2xl font-heading font-bold text-dark mb-4">
              {service.name}
            </h3>
            <p class="text-gray-600 mb-6">
              {service.description}
            </p>
            <a
              href="#contact"
              class="text-primary font-semibold hover:underline inline-flex items-center"
            >
              Get a Quote
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Neighborhoods Served -->
  <section class="py-16 bg-gray-light">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-heading font-bold text-center mb-4">
        Neighborhoods We Serve in {location.name}
      </h2>
      <p class="text-xl text-center text-gray-600 mb-12 max-w-3xl mx-auto">
        Providing expert services throughout the {location.fullName} metro area
      </p>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
        {location.neighborhoods.map((neighborhood) => (
          <div class="bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <h3 class="font-semibold text-dark">{neighborhood.name}</h3>
                {neighborhood.description && (
                  <p class="text-sm text-gray-500 mt-1">{neighborhood.description}</p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Steps -->
  <ProcessSteps
    title="How We Work"
    steps={steps}
    variant="vertical"
  />

  <!-- Testimonials -->
  <section class="py-16 bg-gray-light">
    <TestimonialSlider
      title={`What ${location.name} Customers Say`}
      testimonials={location.testimonials}
      autoplay={true}
    />
  </section>

  <!-- FAQ Section -->
  <FAQAccordion
    title="Frequently Asked Questions"
    faqs={faqs}
  />

  <!-- Contact Form Section -->
  <section id="contact" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-heading font-bold mb-4">
            Get Your Free Quote in {location.name}
          </h2>
          <p class="text-xl text-gray-600">
            Call us at <a href={`tel:${location.phone}`} class="text-primary font-semibold hover:underline">{location.phone}</a> or fill out the form below
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Contact Info -->
          <div class="bg-gray-light p-8 rounded-lg">
            <h3 class="text-2xl font-heading font-bold mb-6">Contact Information</h3>

            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <div class="font-semibold">Phone</div>
                  <a href={`tel:${location.phone}`} class="text-primary hover:underline">
                    {location.phone}
                  </a>
                </div>
              </div>

              {location.email && (
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <div>
                    <div class="font-semibold">Email</div>
                    <a href={`mailto:${location.email}`} class="text-primary hover:underline">
                      {location.email}
                    </a>
                  </div>
                </div>
              )}

              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <div class="font-semibold">Service Area</div>
                  <div class="text-gray-600">{location.fullName} Metro</div>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <div class="font-semibold">Business Hours</div>
                  <div class="text-gray-600">Mon-Fri: 8am-6pm</div>
                  <div class="text-gray-600">Sat: 9am-4pm</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <ContactForm
              config={config}
              title=""
              description=""
              submitText="Get Free Quote"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    headline={`Ready to Get Started in ${location.name}?`}
    description="Get a free consultation and quote today. We're here to help bring your outdoor vision to life."
    primaryCTA={{ text: 'Get Free Quote', href: '#contact' }}
    secondaryCTA={{ text: `Call ${location.phone}`, href: `tel:${location.phone}` }}
    variant="dark"
  />
</BaseLayout>
