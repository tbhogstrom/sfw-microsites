---
/**
 * ServiceCard.astro - Service card with background image overlay
 * Displays service information with image background and CTA
 */
import type { BaseProps } from '@sfw/ui/types';
import Image from '../ui/Image.astro';
import Button from '../ui/Button.astro';

export interface Props extends BaseProps {
  title: string;
  description: string;
  image: string;
  href: string;
  ctaText?: string;
}

const {
  title,
  description,
  image,
  href,
  ctaText = 'Learn More',
  class: className = '',
  ...rest
} = Astro.props;

const classes = [
  'relative overflow-hidden rounded-lg group h-full',
  className,
].filter(Boolean).join(' ');
---

<div class={classes} {...rest}>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark via-dark/80 to-dark/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 p-6 h-full flex flex-col justify-end min-h-[350px]">
    <h3 class="text-2xl font-heading font-bold text-white mb-3">
      {title}
    </h3>

    <p class="text-white/90 mb-6 line-clamp-3">
      {description}
    </p>

    <div>
      <Button
        href={href}
        variant="primary"
        icon="arrow-right"
      >
        {ctaText}
      </Button>
    </div>
  </div>
</div>
