---
/**
 * Icon.astro - SVG icon wrapper component
 * Provides consistent SVG icons across the application
 */
import type { BaseProps } from '@sfw/ui/types';

export interface Props extends BaseProps {
  name: 'phone' | 'email' | 'menu' | 'close' | 'chevron-down' | 'chevron-right' | 'check' | 'star' | 'location' | 'arrow-right';
  size?: number;
  ariaLabel?: string;
}

const {
  name,
  size = 24,
  class: className = '',
  ariaLabel,
  ...rest
} = Astro.props;

const icons = {
  phone: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
  email: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  menu: 'M4 6h16M4 12h16M4 18h16',
  close: 'M6 18L18 6M6 6l12 12',
  'chevron-down': 'M19 9l-7 7-7-7',
  'chevron-right': 'M9 5l7 7-7 7',
  check: 'M5 13l4 4L19 7',
  star: 'M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z',
  location: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
  'arrow-right': 'M14 5l7 7m0 0l-7 7m7-7H3',
};

const path = icons[name];
const classes = ['inline-block', className].filter(Boolean).join(' ');
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={classes}
  aria-label={ariaLabel}
  aria-hidden={!ariaLabel}
  {...rest}
>
  <path d={path} />
</svg>
