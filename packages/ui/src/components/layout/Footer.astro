---
/**
 * Footer.astro - Main site footer
 * Displays DBA headline, company links, and navigation
 */
import type { BaseProps, SiteConfig, NavigationItem } from '@sfw/ui/types';
import { dbasWithDomains } from '@sfw/content';

export interface Props extends BaseProps {
  config: SiteConfig;
  navigation?: NavigationItem[];
}

const {
  config,
  navigation = [],
  class: className = '',
  ...rest
} = Astro.props;

// Get all DBAs with domains (sorted alphabetically)
const allDBAs = [...dbasWithDomains].sort((a, b) => a.name.localeCompare(b.name));

const classes = ['bg-dark text-white py-10', className].filter(Boolean).join(' ');
---

<footer class={classes} {...rest}>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">

      <!-- Left Column: DBA Headline & Office Locations -->
      <div>
        <h1 class="text-2xl md:text-3xl font-heading font-bold text-white mb-3">
          {config.name}
        </h1>
        <p class="text-gray-300 text-base">
          {config.name} has offices in Portland, Oregon and Seattle, Washington to serve you.
        </p>
      </div>

      <!-- Middle Column: Our Companies (2-column grid) -->
      <div>
        <h3 class="font-bold text-white mb-4 text-sm uppercase tracking-wide">Our Companies</h3>
        <ul class="grid grid-cols-2 gap-x-4 gap-y-2 text-sm">
          {allDBAs.map((dba) => (
            <li>
              <a
                href={dba.domain}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-300 hover:text-primary transition-colors"
              >
                {dba.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Right Column: Quick Links -->
      {navigation.length > 0 && (
        <div>
          <h3 class="font-bold text-white mb-4 text-sm uppercase tracking-wide">Quick Links</h3>
          <ul class="space-y-2 text-sm">
            {navigation.map((item) => (
              <li>
                <a
                  href={item.url}
                  class="text-gray-300 hover:text-primary transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </div>
</footer>

<style>
  /* Ensure links are visible and accessible */
  a {
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  a:hover {
    text-decoration-thickness: 2px;
  }

  a:focus {
    outline: 2px solid currentColor;
    outline-offset: 2px;
    border-radius: 2px;
  }
</style>
