---
/**
 * HeroSection.astro - Hero section with background image
 * Full-width hero with headline, subheadline, and CTA buttons
 * Optionally includes HubSpot form on the left
 */
import type { BaseProps } from '@sfw/ui/types';
import Button from '../ui/Button.astro';

export interface HubSpotFormConfig {
  portalId: string;
  formId: string;
  region?: string;
}

export interface Props extends BaseProps {
  headline: string;
  subheadline?: string;
  backgroundImage?: string;
  primaryCTA?: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
  overlay?: boolean;
  height?: 'sm' | 'md' | 'lg' | 'full';
  textAlign?: 'left' | 'center' | 'right';
  hubspotForm?: HubSpotFormConfig;
}

const {
  headline,
  subheadline,
  backgroundImage = 'https://cdn-ileeamj.nitrocdn.com/WrsmSvzGThHeWebWzpPigJcevuotdycK/assets/images/optimized/rev-26df6f7/rotrepairseattle.com/wp-content/uploads/2025/10/rot-repair-seattle.webp',
  primaryCTA,
  secondaryCTA,
  overlay = true,
  height = 'lg',
  textAlign = 'center',
  hubspotForm,
  class: className = '',
  ...rest
} = Astro.props;

const heightClasses = {
  sm: 'min-h-[400px]',
  md: 'min-h-[500px]',
  lg: 'min-h-[600px]',
  full: 'min-h-screen',
};

const textAlignClasses = {
  left: 'text-left items-start',
  center: 'text-center items-center',
  right: 'text-right items-end',
};

const classes = [
  'relative flex items-center justify-center',
  heightClasses[height],
  className,
].filter(Boolean).join(' ');

const contentClasses = [
  'relative z-10 container mx-auto px-4 flex flex-col',
  textAlignClasses[textAlign],
].filter(Boolean).join(' ');

const formId = hubspotForm ? `hubspot-form-${hubspotForm.formId}` : '';
---

<section class={classes} {...rest}>
  <!-- Background Image -->
  {backgroundImage && (
    <div class="absolute inset-0 z-0">
      <img
        src={backgroundImage}
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
      {overlay && (
        <div class="absolute inset-0 bg-dark/60"></div>
      )}
    </div>
  )}

  <!-- Content -->
  <div class={hubspotForm ? 'relative z-10 container mx-auto px-4' : contentClasses}>
    {hubspotForm ? (
      <!-- Layout with HubSpot Form -->
      <div class="flex flex-col lg:flex-row gap-8 items-center lg:items-stretch">
        <!-- Content - Left Two Thirds -->
        <div class="w-full lg:w-2/3 flex flex-col justify-center text-left order-2 lg:order-1">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-6">
            {headline}
          </h1>

          {subheadline && (
            <p class="text-xl md:text-2xl text-white/90 mb-8">
              {subheadline}
            </p>
          )}

          {(primaryCTA || secondaryCTA) && (
            <div class="flex flex-col sm:flex-row gap-4">
              {primaryCTA && (
                <Button href={primaryCTA.href} variant="primary" size="lg">
                  {primaryCTA.text}
                </Button>
              )}
              {secondaryCTA && (
                <Button href={secondaryCTA.href} variant="outline" size="lg">
                  {secondaryCTA.text}
                </Button>
              )}
            </div>
          )}

          <slot />
        </div>

        <!-- HubSpot Form - Right Third -->
        <div class="w-full lg:w-1/3 order-1 lg:order-2">
          <div class="bg-white rounded-lg shadow-xl p-6 lg:p-8">
            <!-- Business Hours Message -->
            <div id="business-hours-message" class="text-center mb-4 font-semibold text-lg"></div>

            <div id={formId} class="hubspot-form-container"></div>
          </div>
        </div>
      </div>
    ) : (
      <!-- Standard Layout without Form -->
      <>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-6 max-w-4xl">
          {headline}
        </h1>

        {subheadline && (
          <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-2xl">
            {subheadline}
          </p>
        )}

        {(primaryCTA || secondaryCTA) && (
          <div class="flex flex-col sm:flex-row gap-4">
            {primaryCTA && (
              <Button href={primaryCTA.href} variant="primary" size="lg">
                {primaryCTA.text}
              </Button>
            )}
            {secondaryCTA && (
              <Button href={secondaryCTA.href} variant="outline" size="lg">
                {secondaryCTA.text}
              </Button>
            )}
          </div>
        )}

        <slot />
      </>
    )}
  </div>
</section>

{hubspotForm && (
  <>
    <!-- HubSpot Form Script -->
    <script is:inline src="//js.hsforms.net/forms/embed/v2.js" charset="utf-8"></script>
    <script is:inline define:vars={{ formId, hubspotForm }}>
      // Business hours checker
      const updateBusinessHoursMessage = () => {
        const messageEl = document.getElementById('business-hours-message');
        if (!messageEl) return;

        const now = new Date();
        const pstTime = new Date(now.toLocaleString('en-US', { timeZone: 'America/Los_Angeles' }));
        const currentHour = pstTime.getHours();

        // Business hours: 7am-4pm PST
        if (currentHour >= 7 && currentHour < 16) {
          messageEl.textContent = 'ðŸ’¬ We can chat now!';
          messageEl.className = 'text-center mb-4 font-semibold text-lg text-green-600';
        } else {
          // Calculate hours until open
          let hoursUntilOpen;
          if (currentHour >= 16) {
            // After 4pm, open tomorrow at 7am
            hoursUntilOpen = (24 - currentHour) + 7;
          } else {
            // Before 7am, open today at 7am
            hoursUntilOpen = 7 - currentHour;
          }

          messageEl.textContent = `â° Our office opens in ${hoursUntilOpen} hours`;
          messageEl.className = 'text-center mb-4 font-semibold text-lg text-gray-600';
        }
      };

      // Wait for HubSpot script to load
      const loadHubSpotForm = () => {
        if (window.hbspt) {
          window.hbspt.forms.create({
            portalId: hubspotForm.portalId,
            formId: hubspotForm.formId,
            region: hubspotForm.region || 'na1',
            target: `#${formId}`,
            submitButtonClass: 'hs-button primary large',
            cssClass: 'hs-custom-form',
            translations: {
              en: {
                submitText: 'Contact me ASAP'
              }
            }
          });
          updateBusinessHoursMessage();
          // Update every minute
          setInterval(updateBusinessHoursMessage, 60000);
        } else {
          setTimeout(loadHubSpotForm, 100);
        }
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', loadHubSpotForm);
      } else {
        loadHubSpotForm();
      }
    </script>

    <!-- Custom HubSpot Form Styling -->
    <style is:global>
      /* Make all form inputs full width and stack vertically */
      .hubspot-form-container .hs-form-field {
        width: 100% !important;
        margin-bottom: 1rem !important;
      }

      .hubspot-form-container .hs-input {
        width: 100% !important;
        display: block !important;
      }

      .hubspot-form-container .hs-form-field > label {
        display: block !important;
        width: 100% !important;
        margin-bottom: 0.5rem !important;
      }

      .hubspot-form-container .input {
        width: 100% !important;
      }

      .hubspot-form-container .hs-submit {
        width: 100% !important;
      }

      /* Style submit button to match primary CTA */
      .hubspot-form-container .hs-button,
      .hubspot-form-container input[type="submit"],
      .hubspot-form-container .hs-submit input,
      .hubspot-form-container .hs-submit .hs-button,
      .hs-button.primary.large {
        width: 100% !important;
        background-color: #a1b770 !important;
        background: #a1b770 !important;
        color: white !important;
        border: none !important;
        border-color: #a1b770 !important;
        padding: 1rem 2rem !important;
        font-size: 1.125rem !important;
        font-weight: 600 !important;
        border-radius: 0.5rem !important;
        cursor: pointer !important;
        transition: opacity 0.2s !important;
      }

      .hubspot-form-container .hs-button:hover,
      .hubspot-form-container input[type="submit"]:hover,
      .hubspot-form-container .hs-submit input:hover {
        opacity: 0.9 !important;
        background-color: #a1b770 !important;
        background: #a1b770 !important;
      }

      /* Remove inline styles that might conflict */
      .hubspot-form-container fieldset {
        max-width: 100% !important;
      }
    </style>
  </>
)}
