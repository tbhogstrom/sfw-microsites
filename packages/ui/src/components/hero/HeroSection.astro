---
/**
 * HeroSection.astro - Hero section with background image
 * Full-width hero with headline, subheadline, and CTA buttons
 * Optionally includes HubSpot form on the left
 */
import type { BaseProps } from '@sfw/ui/types';
import Button from '../ui/Button.astro';

export interface HubSpotFormConfig {
  portalId: string;
  formId: string;
  region?: string;
}

export interface Props extends BaseProps {
  headline: string;
  subheadline?: string;
  backgroundImage?: string;
  primaryCTA?: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
  overlay?: boolean;
  height?: 'sm' | 'md' | 'lg' | 'full';
  textAlign?: 'left' | 'center' | 'right';
  hubspotForm?: HubSpotFormConfig;
}

const {
  headline,
  subheadline,
  backgroundImage = 'https://cdn-ileeamj.nitrocdn.com/WrsmSvzGThHeWebWzpPigJcevuotdycK/assets/images/optimized/rev-26df6f7/rotrepairseattle.com/wp-content/uploads/2025/10/rot-repair-seattle.webp',
  primaryCTA,
  secondaryCTA,
  overlay = true,
  height = 'lg',
  textAlign = 'center',
  hubspotForm,
  class: className = '',
  ...rest
} = Astro.props;

const heightClasses = {
  sm: 'min-h-[400px]',
  md: 'min-h-[500px]',
  lg: 'min-h-[600px]',
  full: 'min-h-screen',
};

const textAlignClasses = {
  left: 'text-left items-start',
  center: 'text-center items-center',
  right: 'text-right items-end',
};

const classes = [
  'relative flex items-center justify-center',
  heightClasses[height],
  className,
].filter(Boolean).join(' ');

const contentClasses = [
  'relative z-10 container mx-auto px-4 flex flex-col',
  textAlignClasses[textAlign],
].filter(Boolean).join(' ');

const formId = hubspotForm ? `hubspot-form-${hubspotForm.formId}` : '';
---

<section class={classes} {...rest}>
  <!-- Background Image -->
  {backgroundImage && (
    <div class="absolute inset-0 z-0">
      <img
        src={backgroundImage}
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
      {overlay && (
        <div class="absolute inset-0 bg-dark/60"></div>
      )}
    </div>
  )}

  <!-- Content -->
  <div class={hubspotForm ? 'relative z-10 container mx-auto px-4' : contentClasses}>
    {hubspotForm ? (
      <!-- Layout with HubSpot Form -->
      <div class="flex flex-col lg:flex-row gap-8 items-center lg:items-stretch">
        <!-- HubSpot Form - Left Third -->
        <div class="w-full lg:w-1/3">
          <div class="bg-white rounded-lg shadow-xl p-6 lg:p-8">
            <div id={formId}></div>
          </div>
        </div>

        <!-- Content - Right Two Thirds -->
        <div class="w-full lg:w-2/3 flex flex-col justify-center text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-6">
            {headline}
          </h1>

          {subheadline && (
            <p class="text-xl md:text-2xl text-white/90 mb-8">
              {subheadline}
            </p>
          )}

          {(primaryCTA || secondaryCTA) && (
            <div class="flex flex-col sm:flex-row gap-4">
              {primaryCTA && (
                <Button href={primaryCTA.href} variant="primary" size="lg">
                  {primaryCTA.text}
                </Button>
              )}
              {secondaryCTA && (
                <Button href={secondaryCTA.href} variant="outline" size="lg">
                  {secondaryCTA.text}
                </Button>
              )}
            </div>
          )}

          <slot />
        </div>
      </div>
    ) : (
      <!-- Standard Layout without Form -->
      <>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-6 max-w-4xl">
          {headline}
        </h1>

        {subheadline && (
          <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-2xl">
            {subheadline}
          </p>
        )}

        {(primaryCTA || secondaryCTA) && (
          <div class="flex flex-col sm:flex-row gap-4">
            {primaryCTA && (
              <Button href={primaryCTA.href} variant="primary" size="lg">
                {primaryCTA.text}
              </Button>
            )}
            {secondaryCTA && (
              <Button href={secondaryCTA.href} variant="outline" size="lg">
                {secondaryCTA.text}
              </Button>
            )}
          </div>
        )}

        <slot />
      </>
    )}
  </div>
</section>

{hubspotForm && (
  <>
    <!-- HubSpot Form Script -->
    <script is:inline src="//js.hsforms.net/forms/embed/v2.js" charset="utf-8"></script>
    <script is:inline define:vars={{ formId, hubspotForm }}>
      // Wait for HubSpot script to load
      const loadHubSpotForm = () => {
        if (window.hbspt) {
          window.hbspt.forms.create({
            portalId: hubspotForm.portalId,
            formId: hubspotForm.formId,
            region: hubspotForm.region || 'na1',
            target: `#${formId}`,
          });
        } else {
          setTimeout(loadHubSpotForm, 100);
        }
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', loadHubSpotForm);
      } else {
        loadHubSpotForm();
      }
    </script>
  </>
)}
